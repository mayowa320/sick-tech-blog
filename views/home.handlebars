<style>
  body{ margin:0; padding:0 } :root{ --brown:rgb(28,14,17);
  --font:rgb(222,236,214) } header{ background-color: var(--brown); padding:30px
  15px; color:var(--font) } a,a:active,a:visited{ color:var(--font) } .header{
  border-radius:5px; background-color:var(--font) ; color:var(--brown);
  padding:15px 10px;width:fit-content; font-size:25px; } .article{ border: 2px
  solid var(--brown);margin:20px} .article_heading{ background-color:
  var(--brown); padding:20px 10px; color:var(--font) } .article_body{
  background-color: var(--font); padding:20px; color:var(--brown ) }
</style>

<header>
  <div>
    <a href="/home">Home</a>
    <a href="/dashboard">Dashboard</a>
    {{#if logged}}
      <a href="/logout">Logout</a>
    {{else}}
      <a href="/login">Login</a>
    {{/if}}
  </div>
  <div class="header">The Tech Blog</div>
</header>
<section>
  {{#each articles}}
    <div class="article">
      <div class="article_heading">
        <div>{{this.title}}</div>
        <div>Posted by {{this.author}} on {{this.date}}</div>
      </div>
      <div class="article_body">{{this.body}}</div>
    </div>
  {{/each}}

</section>